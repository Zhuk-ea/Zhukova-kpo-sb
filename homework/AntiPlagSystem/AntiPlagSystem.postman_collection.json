          "console.log('Запуск запроса к AntiPlagiarism System');",
          ""
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "pm.test('Статус ответа 200', function () {",
          "    pm.response.to.have.status(200);",
          "});",
          "",
          "// Для POST запросов проверяем успешность создания",
          "if (pm.request.method === 'POST') {",
          "    pm.test('Работа создана успешно', function () {",
          "        var jsonData = pm.response.json();",
          "        pm.expect(jsonData.message).to.eql('Work submitted successfully');",
          "        pm.expect(jsonData.id).to.be.a('number');",
          "    });",
          "}",
          "",
          "// Для GET запросов проверяем структуру ответа",
          "if (pm.request.method === 'GET') {",
          "    pm.test('Ответ содержит данные', function () {",
          "        pm.response.to.be.withBody;",
          "        pm.response.to.be.json;",
          "    });",
          "}"
        ]
      }
