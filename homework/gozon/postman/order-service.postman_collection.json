{
  "info": {
    "_postman_id": "order-service-collection",
    "name": "Order Service API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "API для управления заказами"
  },
  "item": [
    {
      "name": "Создание нового заказа",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "X-User-Id",
            "value": "123",
            "description": "ID пользователя (можно менять)",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"amount\": 1500.99,\n  \"description\": \"Ноутбук игровой\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/orders",
          "host": ["{{base_url}}"],
          "path": ["api", "orders"]
        },
        "description": "Создает новый заказ и запускает процесс оплаты. Возвращает созданный заказ."
      },
      "response": []
    },
    {
      "name": "Получить все заказы пользователя",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-User-Id",
            "value": "123",
            "description": "ID пользователя",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/orders",
          "host": ["{{base_url}}"],
          "path": ["api", "orders"]
        },
        "description": "Возвращает список всех заказов текущего пользователя"
      },
      "response": []
    },
    {
      "name": "Получить конкретный заказ",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-User-Id",
            "value": "123",
            "description": "ID пользователя",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/orders/{{order_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "orders", "{{order_id}}"],
          "variable": [
            {
              "key": "order_id",
              "value": "uuid-заказа",
              "description": "ID заказа (скопируйте из ответа создания заказа)"
            }
          ]
        },
        "description": "Получает информацию о конкретном заказе по ID"
      },
      "response": []
    },
    {
      "name": "Тестовые данные для создания заказов",
      "item": [
        {
          "name": "Маленький заказ (успешная оплата)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-User-Id",
                "value": "123",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 100.50,\n  \"description\": \"Книга по программированию\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/orders",
              "host": ["{{base_url}}"],
              "path": ["api", "orders"]
            }
          }
        },
        {
          "name": "Большой заказ (недостаточно средств)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-User-Id",
                "value": "123",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 1000000.00,\n  \"description\": \"Золотой iPhone\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/orders",
              "host": ["{{base_url}}"],
              "path": ["api", "orders"]
            }
          }
        },
        {
          "name": "Заказ для другого пользователя",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-User-Id",
                "value": "456",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 500.00,\n  \"description\": \"Наушники\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/orders",
              "host": ["{{base_url}}"],
              "path": ["api", "orders"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080",
      "type": "string",
      "description": "API Gateway URL"
    },
    {
      "key": "order_id",
      "value": "",
      "type": "string",
      "description": "ID созданного заказа"
    }
  ],
  "event": [
    {
      "listen": "test",
      "script": {
        "exec": [
          "// Тесты для Order Service",
          "",
          "// Для создания заказа",
          "if (pm.response.code === 201) {",
          "    pm.test(\"Заказ успешно создан\", function() {",
          "        pm.response.to.have.status(201);",
          "        pm.response.to.be.json;",
          "    });",
          "    ",
          "    // Сохраняем ID заказа для последующих запросов",
          "    var jsonData = pm.response.json();",
          "    pm.collectionVariables.set(\"order_id\", jsonData.id);",
          "    console.log(\"Order ID сохранен: \" + jsonData.id);",
          "}",
          "",
          "// Для получения заказов",
          "if (pm.response.code === 200) {",
          "    pm.test(\"Список заказов получен\", function() {",
          "        pm.response.to.have.status(200);",
          "        pm.response.to.be.json;",
          "    });",
          "}"
        ],
        "type": "text/javascript"
      }
    }
  ]
}